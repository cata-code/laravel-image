{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "plugins": ["formatjs"],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "jest": true
    },
    "rules": {
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "formatjs/enforce-default-message": ["error", "literal"],
        "formatjs/no-camel-case": ["error"]
    }
}
